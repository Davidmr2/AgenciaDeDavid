@model IEnumerable<AgenciaDeDavid.Models.Pais>

@{
    ViewData["Title"] = "Lista de Países";
}

<h1 class="mt-4">Lista de Países</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar País</a>
</p>
<a class="btn btn-success" asp-action="ExportarCSV">Exportar a CSV</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaisID" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.PaisID" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.PaisID" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
